%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Unterstützung Deutsch bzw. Englisch
%% agfa-babel.sty
%% Stand: 2025/10/07
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\NeedsTeXFormat{LaTeX2e}	%
\ProvidesPackage{./preamble/agfa-babel}
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Initialisierungen
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{ifthen}
 	\provideboolean{english}
 	\provideboolean{ngerman}
  	\provideboolean{german}
	\DeclareOption{english}{%
		\setboolean{english}{true}
		\setboolean{ngerman}{false} 
		\setboolean{german}{false}
		} 
	\DeclareOption{ngerman}{%
		\setboolean{english}{false}
		\setboolean{ngerman}{true} 
		\setboolean{german}{true}
		} 
	\DeclareOption{german}{%
		\setboolean{english}{false}
		\setboolean{ngerman}{true}
		\setboolean{german}{true}
		} 
%% -- Abarbeiten
\ProcessOptions\relax
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Pakete
%% Dies kann bei Bedarf 1:1 gegen polyglossia ausgetauscht werden, 
%% wenn man auf LuaLaTeX umsteigt
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\ifthenelse{\boolean{english}}
{% --> Englisch
	\RequirePackage[ngerman,main=english]{babel}
	\RequirePackage[english=american]{csquotes}
}{}

\ifthenelse{\boolean{ngerman}\OR\boolean{german}}{%
	% --> Deutsch
	\RequirePackage[english,main=ngerman]{babel}
	\RequirePackage[german=guillemets]{csquotes}
}{}

%% -- Anführungszeichen
%% -- \RequirePackage[autostyle,german=guillemets,english=american]{csquotes}

 %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Ausführung
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\ifthenelse{\boolean{english}}
{%
    \RequirePackage[english,backgroundcolor=white]{todonotes}
    \newcommand{\mytodotext}{ToDo: }
    \newcommand{\myquestiontext}{Question: }
    \newcommand{\myanswertext}{Answer: }
}{%
    \RequirePackage[ngerman,backgroundcolor=white]{todonotes}  
    \newcommand{\mytodotext}{ToDo: }
    \newcommand{\myquestiontext}{Frage: }
    \newcommand{\myanswertext}{Antwort: }
}

% -- einheitlich
\newcommand{\mytodo}[1]{\todo[inline,size=\small]{\mytodotext #1}}
\newcommand{\myquestion}[1]{\todo[inline,size=\small]{\myquestiontext #1}}
\newcommand{\myanswer}[1]{\todo[inline,size=\small]{\myanswertext #1}}

