\NeedsTeXFormat{LaTeX2e}	%
\ProvidesPackage{./preamble/agfa-babel}  
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Initialisierungen
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{ifthen}
 	\provideboolean{english}
 	\provideboolean{ngerman}
	\DeclareOption{english}{\setboolean{english}{true}} 
	\DeclareOption{ngerman}{%
		\setboolean{english}{false}
		\setboolean{ngerman}{true}} 
%% -- Abarbeiten
\ProcessOptions\relax
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Pakete
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\ifthenelse{\boolean{english}}
{% --> Englisch
	\RequirePackage[ngerman,main=english]{babel}
}{}
\ifthenelse{\boolean{ngerman}}
{% --> Deutsch
	\RequirePackage[english,main=ngerman]{babel}
%	\babelprovide[hyphenrules=ngerman-x-latest]{ngerman}
}

%% -- Anführungszeichen
\RequirePackage[autostyle,german=guillemets,english=american]{csquotes}

