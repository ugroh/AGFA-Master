\NeedsTeXFormat{LaTeX2e}	%
\ProvidesPackage{agfa-hyperref}

\RequirePackage{ifthen}
 	\provideboolean{english}
	\DeclareOption{english}{\setboolean{english}{true}}
\ProcessOptions\relax
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Pakete
%% %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\ifthenelse{\boolean{english}}
{%% -- if
	\RequirePackage[english,nospace]{varioref}	
	\RequirePackage[breaklinks = true]{hyperref}   
	\RequirePackage{cleveref}
		\crefname{exercise}{Exercise}{Exercises}
		\crefname{item}{item}{item}
		\crefname{thm}{Theorem}{Theorem}
		\crefname{cor}{Corollary}{Corollary}
		\crefname{prop}{Proposition}{Proposition}
		\crefname{defn}{Definition}{Definitions}  
		\crefname{lemma}{Lemma}{Lemmas}         
		\crefname{rem}{Remark}{Remarks}
}
%%
{%% -- else
	\RequirePackage[ngerman,nospace]{varioref}			
	\RequirePackage[breaklinks = true]{hyperref}   
	\RequirePackage{cleveref}	
		\crefname{exercise}{Aufgabe}{Aufgaben}
		\crefname{aufgabe}{Aufgabe}{Aufgaben}
		\crefname{item}{Punkt}{Punkte}
		\crefname{thm}{Theorem}{Theorem}
		\crefname{lemma}{Lemma}{Lemmata}
		\crefname{lem}{Lemma}{Lemmata}
		\crefname{cor}{Korollar}{Korollare}
		\crefname{prop}{Satz}{Sätze}
		\crefname{defn}{Definition}{Definitionen}
		\crefname{rem}{Anmerkung}{Anmerkungen}
}

\endinput